<?xml version="1.0" encoding="utf-8"?>
<addon
	version="1.0.0.0"
	name="RSS reader"
	filename="rssreader"
	description="RSS reader"
	url="http://sample.net/"
	author="Sample">
	
	<interface name="softomate" />
	<browser>
		<opera		output=".\" />
		<firefox	output=".\" />
		<safari		output=".\" />
		<!--ie			output=".\" /-->
		<chrome		output=".\" />
		
	</browser>
	<content jquery="true">
		<script src="content.js" />
	</content>
	<background>
		<script src="bg.js" />
	</background>
	<ui>
		<icons>
			<icon id="x1">
				<all size="32" src="RSS-icon32.png" />
				<all size="18" src="RSS-icon18.png" />
				<ie size="32" src="rss.ico" />
				<safari size="18" src="Icon_bw.png" />	
			</icon>
			<icon id="x2">
				<all size="18" src="RSS-icon18.png" />
				<all size="32" src="RSS-icon32.png" />
				<all size="128" src="RSS-icon128.png" />
			</icon>
		</icons>
		<button tooltip="RSS reader" iconId="x1"/>
		<settings iconId="x2" options="options_page.html"/>
	</ui>
</addon>