<?xml version="1.0" encoding="utf-8"?>
<addon
	version="1.0.0.0"
	name="Google Plus notifier"
	filename="gplus"
	description="Google Plus notifier"
	url="http://sample.net/"
	author="Sample">
	
	<interface name="framework" />
	<browser>
		<chrome		output=".\" />
		<opera		output=".\" />
		<ie			output=".\" />
		<safari		output=".\" />
		<firefox	output=".\" />	
	</browser>
	<content></content>
	<background>
		<script src="bg.js" />
	</background>
	<ui>
		<icons>
			<icon id="x1">
				<all size="16" src="gplus_16.png" />
				<ie size="32" src="addons_framework.ico" />
				<safari size="18" src="gplus_18_bw.png" />
			</icon>
			<icon id="x2">
				<all size="16" src="gplus_16.png" />
				<all size="48" src="gplus_48.png" />
				<all size="128" src="gplus_128.png" />
			</icon>
		</icons>
		<button tooltip="Google Plus notifier" iconId="x1"/>
		<settings iconId="x2" />
	</ui>
	<update>
		<opera		url="http://sample.net/opera/" />
		<chrome		url="http://sample.net/chrome/" />
		<ie			url="http://sample.net/ie/" />
		<safari		url="http://sample.net/safari/" />
		<firefox	url="https://sample.net/firefox/" />
	</update>
</addon>