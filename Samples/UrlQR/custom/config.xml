<?xml version="1.0" encoding="utf-8"?>
<addon
	version="1.0.0.0"
	name="UrlQR"
	filename="urlqr"
	description="QR Code with URL inside"
	url="http://sample.net/"
	author="Sample">
	
	<interface name="framework" />
	<browser>
		<chrome		output=".\" />
		<opera		output=".\" />
		<ie			output=".\" />
		<safari		output=".\" />
		<firefox	output=".\" />

	</browser>
	<content>
		<script src="content.js" />
	</content>
	<background>
		<script src="bg.js" />
	</background>
	<ui>
		<icons>
			<icon id="x1">
				<all size="32" src="32x32.png" />
				<ie size="32" src="addons_framework.ico" />
			</icon>
			<icon id="x2">
				<all size="32" src="32x32.png" />
			</icon>
		</icons>
		<button tooltip="UrlQR" iconId="x1"/>
		<settings iconId="x2" />
	</ui>
	<update>
		<opera		url="http://sample.net/opera/" />
		<chrome		url="http://sample.net/chrome/" />
		<ie			url="http://sample.net/ie/" />
		<safari		url="http://sample.net/safari/" />
		<firefox	url="https://sample.net/firefox/" />
	</update>
