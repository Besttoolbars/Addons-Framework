<?xml version="1.0" encoding="utf-8"?>
<addon
	version="1.0.0.1"
	name="Highlight"
	filename="highlight"
	description="Highlight word on page"
	url="http://sample.net/"
	author="Sample">
	
	<interface name="framework" />
	<browser>
		<chrome		output="out\" />
		<opera		output="out\" />
		<safari		output="out\" />		
		<ie			output="out\" />
		<firefox	output="out\" />
	</browser>
	<content>
		<script src="content.js" />		
	</content>
	<background>
		<script src="bg.js" />
	</background>
	<ui>
		<icons>
			<icon id="i32">
				<all size="32" src="32x32.png" />
				<all size="18" src="18x18.png" />
				<all size="16" src="16x16.png" />
				<ie size="16" src="16x16.ico" />
			</icon>
		</icons>
		<button tooltip="Highlight" iconId="i32"/>
		<settings iconId="i32" />
	</ui>
	<update>
		<opera 		url="http://sample.net/opera/" />
		<chrome 	url="http://sample.net/chrome/" />
		<ie 		url="http://sample.net/ie/" />
		<safari 	url="http://sample.net/safari/" />
		<firefox	url="https://sample.net/firefox/" />
	</update>
</addon>